# > cd git/addons/math/arrayfire/c
# > make target=base or sparse or ...
# > ./base or sparse or ...
LIBS=-lafcpu
LDFLAGS=-shared -Wl,-soname,libdll.so
LIB_PATHS=-L/opt/arrayfire/lib64
CFLAGS=-fPIC -O2 -fvisibility=default
INCLUDES=-I/opt/arrayfire/include
CC=gcc	$(COMPILER_OPTIONS)
COMPILER_OPTIONS=-g

OBJS=  \
 dll.o

%.o: %.c
	$(CC) -c -o $@ $< $(CFLAGS)

$(target) : $(OBJS)
	$(CC) -o $@ $(OBJS) $(LDFLAGS)

